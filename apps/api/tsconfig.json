{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}